<h1> <%= @gallery.name %> </h1>

  <ul>
    <li>City: <%= @gallery.city %></li>
    <li>State: <%= @gallery.state %></li>
    <li>Zip: <%= @gallery.zip %></li>
    <% unless @gallery.description.nil? %>
      <li>Description: <%= @gallery.description %></li>
    <% end %>
  </ul>

<h2> Paintings: </h2>

<ul>
  <% @paintings.each do |painting| %>
    <li><%= painting.title %> By: <%= painting.artist %></li>
  <% end %>
</ul>

<%= render 'paintings/form' %>

<%= link_to "back", galleries_path %>
